{
    "$id": "reviewsStreamsApis_reviewsStreamsApi",
    "$schema": "https://schema.yext.com/config/streams/streams-api/v1",
    "name": "Streams Endpoint - Individual Reviews",
    "stream": {
      "source": "reviews",
      "fields": [
        "rating",
        "content",
        "reviewDate",
        "authorName",
        "comments",
        "entity.id",
        "apiIdentifier"
      ],
      "filter": {
        "publishers": [
          "firstparty", "externalfirstparty"
        ]
      }
    },
    "fieldIndexes": [
      {
        "field": "entity.id"
      },
      {
        "field": "apiIdentifier"
      }
    ]
  }
